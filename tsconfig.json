{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./",
    "outDir": "./dist",
    "noEmitOnError": false,
    "declaration": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules/**",
    "typings/**",
    "dist/**"
  ]
}